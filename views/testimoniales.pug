extends ./layout/index 

block contenido 
    main.container.mt-5 
        h1.text-center #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales

        div.row
            div.col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial

                if(errores)
                    each error in errores 
                        div.alert.col.alert-danger.text-center #{error.mensaje}

                div.row.justify-content-center.col
                    div.col-md-8
                        form(action="/testimoniales" method="POST")
                            div.form-group
                                label(for="nombre") Nombre 
                                input(type="text", placeholder="Nombre", name="nombre", class="form-control" , value=nombre)
                            div.form-group
                                label(for="correo") Correo 
                                input(type="text", placeholder="Correo", name="correo", class="form-control", value=correo)
                            div.form-group
                                label(for="mensaje") Mensaje 
                                textarea#mensaje(class="form-control", name="mensaje", placeholder="Mensaje", rows=3) #{mensaje}
                            input.btn.btn-success.btn-block(type="submit", value="Enviar") 
            